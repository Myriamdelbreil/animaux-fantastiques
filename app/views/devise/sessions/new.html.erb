<div class="container container-form">
  <h2 id="title-signin">Sign in</h2>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email" }, placeholder:"Bobby@gmail.com"  %>
      <%= f.input :password,
                  required: false,
                  input_html: { autocomplete: "current-password" }, placeholder:"********" %>
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    </div>

    <div class="d-flex form-actions justify-content-center">
      <%= f.button :submit, "Sign in", class:"btn btn-outline-warning-sessions" %>
    </div>
  <% end %>

  <div class="my-3 text-center" >
    <%= render "devise/shared/links"%>
  </div>

</div>
