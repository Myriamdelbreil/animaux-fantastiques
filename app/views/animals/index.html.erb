
<div class="container">
  <h1>Tous les animaux</h1>
    <div class="row">
        <% @animals.each do |animal|%>
        <div class="col-4", style="margin-bottom: 10px">
          <div class="card-trip">
            <%if animal.photo.key%>
              <%= cl_image_tag animal.photo.key%>
            <%else%>
              <%= image_tag("placeholder_animal.png", style:"object-fit:cover, object-align:center")%>
            <%end%>
            <div class="card-trip-infos">
              <div>
                <h2> <%= animal.name %></h5>
                <p> <%=animal.description%></p>
                <div class="btn_info">
                  <%= link_to "More information", animal_path(animal)%>
                </div>
              </div>
              <h2 class="card-trip-pricing">Â£<%=animal.price%>/day</h2>
              <div class="card-trip-user">
              <% if animal.user.photo.key != nil%>
                <%= cl_image_tag animal.user.photo.key, class:"avatar", gravity:"faces", style:"object-fit:cover" %>
              <%else%>
                <%= image_tag("placeholder_user.png", class:"avatar", style:"object-fit:cover")%>
              <%end%>
              </div>
            </div>
          </div>
        </div>
        <% end %>
    </div>
</div>
