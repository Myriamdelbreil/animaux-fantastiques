<div class="container" style="margin-top:100px; width:600px">
  <h1>Cr√©er un nouvel animal</h1>
  <%= simple_form_for @animal do |f| %>
    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.input :category, as: :select, collection: Animal::CATEGORIES %>
    <%= f.input :price %>
    <%= f.input :photos, as: :file, input_html: { multiple: true }%>
    <%= f.submit "Create an animal", class: "btn btn-primary" %>
  <% end %>
</div>
