<div class="container"  style="margin-top: 100px">
  <div style="item-align: center">
    <%= render "search_bar" %>
  </div>
  <div class="fs-1">
    <h1 style="color:black"><%=@animal.name%></h1>
  </div>
  <div class="row" style="300px">
    <div class="column col-6">
      <%if @animal.photos[0] != nil%>
        <%= cl_image_tag @animal.photos[1].key, height: 300, width: 400, crop: :fill %>
      <%else%>
        <%= image_tag("placeholder_animal.png", height: 300, width: 400, alt:"placeholder")%>
      <%end%>
    </div>
    <div class="column col-6">
      <div class="description-card">
        <h3 style="text-align: center">Description of the animal</h3>
        <%= @animal.description %>
      </div>
    </div>
  </div>
  <div class="btn btn-danger">
    <%= link_to "Delete this animal",
          animal_path(@animal),
          method: :delete,
          data: { confirm: "Are you sure?" }, class:"ms-3 text-danger" %>
  </div>
</div>
