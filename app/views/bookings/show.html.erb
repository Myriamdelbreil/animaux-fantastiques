<div class="container d-flex justify-content-around distrib" style="margin-bottom: 100px">
  <div id="booking-show">
    <h1>Summary of your reservation :</h1>
    <br>
    <p>Animal's name : <%=@booking.animal.name%></p>

    <p><%=@booking.animal.name%>'s category : <%=@booking.animal.category%></p>

    <% if @duration > 1 %>
      <p>Number of days of reservation : <%= @duration %> days</p>
    <% else %>
      <p>Number of days of reservation : <%= @duration %> day</p>
    <% end %>

    <p>Total price of your reservation : <%=@booking.animal.price * @duration%> $</p>
    <p>Status of your reservation: <%= @booking.status.capitalize %></p>
  </div>

  <div  id="carouselExampleIndicators" class="carousel slide block" data-bs-ride="carousel">
    <div class="carousel-indicators">
      <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
      <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" aria-label="Slide 2"></button>
      <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2" aria-label="Slide 3"></button>
    </div>
    <div class="carousel-inner">
      <div class="carousel-item active">
        <%if @booking.animal.photos[0] != nil%>
          <%=cl_image_tag @booking.animal.photos[0].key, gravity: :center, height: 300, width: 400, crop: :thumb, style:"border-radius: 3px", alt:"First slide", class:"d-block w-100"%>
        <%else%>
        <%= image_tag("placeholder_animal.png", height: 300, width: 400, alt:"First slide", class:"d-block w-100")%>
        <%end%>
      </div>
      <div class="carousel-item">
        <%if @booking.animal.photos[1] != nil%>
          <%=cl_image_tag @booking.animal.photos[1].key, gravity: :center, height: 300, width: 400, crop: :thumb, style:"border-radius: 3px", alt:"Second slide", class:"d-block w-100"%>
        <%else%>
        <%= image_tag("placeholder_animal.png", height: 300, width: 400, alt:"Second slide", class:"d-block w-100")%>
        <%end%>
      </div>
      <div class="carousel-item">
        <%if @booking.animal.photos[2] != nil%>
          <%=cl_image_tag @booking.animal.photos[2].key, gravity: :center, height: 300, width: 400, crop: :thumb, style:"border-radius: 3px", alt:"Third slide", class:"d-block w-100"%>
        <%else%>
        <%= image_tag("placeholder_animal.png", height: 300, width: 400, alt:"Third slide", class:"d-block w-100")%>
        <%end%>
      </div>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Next</span>
    </button>
  </div>

</div>

<div class="container d-flex distrib" id="buttons-show" style="margin-bottom: 100px">
  <div class="row justify-content-between" style="width:100%">
    <div class="col d-flex">
      <div class="col btn btn-warning" style="margin-right:10px;padding:none">
        <%= link_to "Go back to my bookings",bookings_path()%>
      </div>
      <div class="col btn btn-warning">
        <%= link_to "Go back to animals",animals_path()%>
      </div>
    </div>
    <div class="col d-flex justify-content-end">
      <div class="row" style="margin-top:20px">
        <div class="col">
          <%= link_to edit_booking_path(@booking) do %>
            <i class="fas fa-edit" aria-hidden="true" style="font-size:30px; color:rgb(247, 219, 190)"></i>
          <% end %>
        </div>
        <div class="col">
          <%= link_to booking_path(@booking), method: :delete, data: { confirm: "Are you sure?" } do %>
            <i class="fas fa-trash-alt" style="font-size:30px; color:#d39487"></i>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
