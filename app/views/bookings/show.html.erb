
<div class="container d-flex justify-content-around distrib" style="margin-bottom: 100px">
  <div id="booking-show">
    <h1>Summary of your reservation :</h1>
    <br>
    <p>Animal's name : <%=@booking.animal.name%></p>

    <p><%=@booking.animal.name%>'s category : <%=@booking.animal.category%></p>

    <% if @duration > 1 %>
      <p>Number of days of reservation : <%= @duration %> days</p>
    <% else %>
      <p>Number of days of reservation : <%= @duration %> day</p>
    <% end %>

    <p>Total price of your reservation : <%=@booking.animal.price * @duration%> $</p>
    <p>Status of your reservation: <%= @booking.status.capitalize %></p>

  </div>
  <div  id="carouselExampleIndicators" class="carousel slide block" data-bs-ride="carousel">
    <div class="carousel-indicators">
      <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
      <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" aria-label="Slide 2"></button>
      <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2" aria-label="Slide 3"></button>
    </div>
    <div class="carousel-inner">
      <div class="carousel-item active">
        <%if @booking.animal.photos[0] != nil%>
          <%=cl_image_tag @booking.animal.photos[0].key, gravity: :center, height: 300, width: 400, crop: :thumb, style:"border-radius: 3px", alt:"First slide", class:"d-block w-100"%>
        <%else%>
        <%= image_tag("placeholder_animal.png", height: 300, width: 400, alt:"First slide", class:"d-block w-100")%>
        <%end%>
      </div>
      <div class="carousel-item">
        <%if @booking.animal.photos[1] != nil%>
          <%=cl_image_tag @booking.animal.photos[1].key, gravity: :center, height: 300, width: 400, crop: :thumb, style:"border-radius: 3px", alt:"Second slide", class:"d-block w-100"%>
        <%else%>
        <%= image_tag("placeholder_animal.png", height: 300, width: 400, alt:"Second slide", class:"d-block w-100")%>
        <%end%>
      </div>
      <div class="carousel-item">
        <%if @booking.animal.photos[2] != nil%>
          <%=cl_image_tag @booking.animal.photos[2].key, gravity: :center, height: 300, width: 400, crop: :thumb, style:"border-radius: 3px", alt:"Third slide", class:"d-block w-100"%>
        <%else%>
        <%= image_tag("placeholder_animal.png", height: 300, width: 400, alt:"Third slide", class:"d-block w-100")%>
        <%end%>
      </div>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Next</span>
    </button>
  </div>
</div>
<div class="container d-flex justify-content-around distrib" id="buttons-show" style="margin-bottom: 100px">
  <div>
    <div class="btn btn-primary">
      <%= link_to "Go back to my bookings",bookings_path()%>
    </div>
  </div>
   <div>
    <div class="btn btn-primary">
      <%= link_to "Go back to animals",animals_path()%>
    </div>
  </div>
  <div class="row" style="margin-bottom: 50px">
    <div class="column col-lg-6 col-md-12">
      <div class="btn btn-danger">
        <%= link_to "Delete",
              booking_path(@booking),
              method: :delete,
              data: { confirm: "Are you sure?" }, class:"ms-3 text-danger" %>
      </div>
    </div>
    <div class="column col-lg-6 col-md-12">
      <div class="btn btn-warning">
        <%= link_to "Edit",
                edit_booking_path(@booking)
               %>
      </div>
    </div>
  </div>
</div>
